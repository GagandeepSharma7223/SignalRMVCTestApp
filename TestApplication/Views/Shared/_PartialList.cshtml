@model List<TestApplication.Service.Models.TestAppModel>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Campaign Name</th>
            <th>Date</th>
            <th>Clicks</th>
            <th>Conversions</th>
            <th>Impressions</th>
            <th>Affiliate Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CampaignName</td>
                <td>@(item.Date != null ? item.Date.Value.ToString("MM/dd/yyyy") : "")</td>
                <td>@item.Clicks</td>
                <td>@item.Conversions</td>
                <td>@item.Impressions</td>
                <td>@item.AffiliateName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
